<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home.tablayout.fragments.NewDetail.NewDetailFragment">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/backIv"
                android:layout_width="@dimen/back_ic_size"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_left_custom_toolbar"
                android:gravity="center_vertical|start"
                android:text="@string/post"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_custom_toolbar"
                android:textStyle="bold" />

        </LinearLayout>

    </android.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatarIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:minHeight="@dimen/new_detail_image_size"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress_load_detail"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/green"
                android:translationZ="@dimen/small_footer_text_size"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@id/avatarIv"
                app:layout_constraintStart_toStartOf="@id/avatarIv"
                app:layout_constraintTop_toBottomOf="@id/avatarIv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fragment_horizontal_margin"
                app:layout_constraintEnd_toEndOf="@id/avatarIv"
                app:layout_constraintStart_toStartOf="@id/avatarIv"
                app:layout_constraintTop_toBottomOf="@id/avatarIv">

                <TextView
                    android:id="@+id/commenterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_padding"
                    android:width="@dimen/new_detail_commenter_width"
                    android:maxLines="2"
                    android:textColor="@color/cyan"
                    android:textSize="@dimen/new_detail_commenter_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/newDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_padding"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/commentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/new_detail_comment_margin_top"
                    android:elegantTextHeight="true"
                    android:lineHeight="@dimen/new_detail_comment_line_height"
                    android:textSize="@dimen/new_detail_comment_size"
                    app:layout_constraintEnd_toEndOf="@id/commenterTv"
                    app:layout_constraintStart_toStartOf="@id/commenterTv"
                    app:layout_constraintTop_toBottomOf="@id/commenterTv"
                    />

                <ImageView
                    android:id="@+id/newIvLike"
                    android:layout_width="@dimen/new_detail_image_like_size"
                    android:layout_height="@dimen/new_detail_image_like_size"
                    android:layout_marginTop="@dimen/new_detail_image_like_margin_top"
                    android:src="@drawable/ic_like_off"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/commentTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>