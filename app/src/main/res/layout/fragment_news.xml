<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home.tablayout.fragments.NewsFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/empty_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/empty_news"
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="@dimen/big_text_tabs"
        android:textAlignment="center" />
    <ProgressBar
        android:id="@+id/progress_bar_news"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/small_footer_text_size"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:indeterminateTint="@color/cyan"
        />
<!--
  app:layout_constraintBottom_toBottomOf="parent"
 app:layout_constraintEnd_toEndOf="@id/signupBtn"
        app:layout_constraintStart_toStartOf="@id/signupBtn"
        app:layout_constraintTop_toBottomOf="@id/signupBtn"
-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_edit_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_btn_margin"
        android:backgroundTint="@color/color_float_button"
        android:src="@android:drawable/ic_input_add"
        android:tint="@android:color/white"
        app:backgroundTint="@color/color_float_button"
        app:tint="@android:color/white" />

</FrameLayout>